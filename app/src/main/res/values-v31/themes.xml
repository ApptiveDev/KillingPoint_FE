<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ 스플래시 화면 최소화 (MainActivity의 Compose 스플래시 사용) -->
    <style name="Theme.KillingPoint" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 시스템 스플래시 화면을 검은색 배경으로만 표시 (아이콘 숨김) -->
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon_transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/black</item>
    </style>
</resources>

